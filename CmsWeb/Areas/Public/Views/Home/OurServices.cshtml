                            <div class="col-2  myLabel">
                                @Localizer["Phone:"]
                            </div>
                            <div class="col-8 padInput">
                                <input name="phone" type="text" required />
                            </div>
                            <div class="col-2">
                            </div>
                        </div>


                    </div>
                </div>

                <div class="row width107 hideOnMobile" style="margin:0px;justify-content:space-evenly;">
