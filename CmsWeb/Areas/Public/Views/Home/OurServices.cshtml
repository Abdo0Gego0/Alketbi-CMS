                        <div class="row" style="justify-content:space-evenly;width:100%">
                            <div class="col-3  myLabel">
                                @Localizer["Observations:"]
                            </div>
                            <div class="col-7 padInput">
                                <input name="obs" type="text" />
                            </div>
                            <div class="col-2">
