                            <div class="col-2  myLabel">
                                @Localizer["Email:"]
                            </div>
                            <div class="col-8 padInput">
                                <input name="mail" type="email" required />
                            </div>
                            <div class="col-2">
                            </div>
                        </div>

                    </div>
                </div>

