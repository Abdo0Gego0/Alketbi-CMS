                            <div class="col-4  myLabel">
                                @Localizer["Observations:"]
                            </div>
                            <div class="col-8 padInput">
                                <input name="obs" type="text" />
                            </div>
                        </div>

                    </div>
                </div>

                </center>
            <center>
                <div class="row" style="width:85%;justify-content:center">
                    <div class="col-md-6 mb-2">

                        <button type="submit">  @Localizer["Submit"]  </button>

                    </div>
                    <div class="col-2">
                    </div>
                </div>
                @{

                    if(ViewBag.msg!=null)
                    {
                        <div class="successMsg">
                            @ViewBag.msg
                        </div>
                    }
                    else
